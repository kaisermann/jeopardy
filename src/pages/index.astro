---
import Name from '../components/Name.svelte';
import Webcam from '../components/Webcam.svelte';
import MusicButton from '../components/MusicButton.svelte';

let title = 'J E O P A R D I F Y';
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <style global>
		@import "../styles/reset.css";
		@import "../styles/global.css";
	</style>

	<style>
    main {
      display: grid;
      place-items: center;
    }

    .content-container {
      width: 100%;
    }

    .video-container {
      padding: 40px 80px 40px;
      margin: 0 auto;
      max-width: 66%;
    }

    .name-container {
      text-align: center;
      width: 46%;
      margin: 0 auto;
    }

    .music-button-container {
      position: absolute;
      top: 40px;
      right: 40px;
    }

    @media(max-width: 901px) {
      .video-container {
        padding: 40px;
        max-width: 100%;
      }

      .name-container{
        width: 67%;
      }
    }
	</style>
  <script async src="https://cdn.panelbear.com/analytics.js?site=Ed81BhiBXHv"></script>
  <script>
      window.panelbear = window.panelbear || function() { (window.panelbear.q = window.panelbear.q || []).push(arguments); };
      panelbear('config', { site: 'Ed81BhiBXHv' });
  </script>
</head>
<body>
	<main>
    <div class="content-container">
      <div class="video-container">
        <Webcam client:load />
      </div>

      <div class="name-container">
        <Name client:load/>
      </div>

      <div class="music-button-container">
        <MusicButton client:load />
      </div>
    </div>
	</main>
</body>
</html>
